<Window x:Class="AES.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProgressBar" Height="175" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="10">  </RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
        </Grid.ColumnDefinitions>        
        
        <TextBlock Grid.Column="2" Grid.Row="1" TextWrapping="Wrap"></TextBlock>
        <ProgressBar Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" Minimum="0" Maximum="100" Value="0" Height="25" />
        <Button Name="button_OK" Grid.Column="2" Grid.Row="3">OK</Button>
        
    </Grid>
</Window>
